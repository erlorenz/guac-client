    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "rootDir": "src",
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
